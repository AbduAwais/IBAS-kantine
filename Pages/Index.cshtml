@page
@model Ibas.Pages.IndexModel

<h2>Canteen Menu</h2>

@if (Model.MenuItems != null && Model.MenuItems.Count > 0)
{
<table>
    <thead>
    <tr>
        <th>Day</th>
        <th>Cold Dish</th>
        <th>Hot Dish</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MenuItems)
    {
    <tr>
        <td>@item.RowKey</td> <!-- RowKey is used to store the Day (e.g., Friday) -->
        <td>@item.ColdDish</td>
        <td>@item.HotDish</td>
    </tr>
    }
    </tbody>
</table>
}
else
{
<p>No menu data available.</p>
}
